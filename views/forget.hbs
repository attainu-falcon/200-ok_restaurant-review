<div class="contaiiner">
	<div class="row">
		<div class="col-md-12">
			<form action="/forget" method="POST">
				<legend class="ml-3">Forgot Password</legend>
				<div class="form-group">
					<label for="username"></label>
					<div class="col-sm-3">
						<input type="text" name="username" placeholder="Username" autofocus class="form-control"
							required>
					</div>
				</div>

				<div class="form-group">
					<label for="securityquestion"></label>
					<div class="col-sm-3">
						<input type="text" name="securityques" placeholder="What is your pet name" autofocus
							class="form-control" required>
					</div>
				</div>
				<div class="form-group">
					<label for="password"></label>
					<div class="col-sm-3">
						<input type="password" name="password" value="" placeholder="New password" autofocus="autofocus"
							class="form-control" required />
					</div>
				</div>


				<div class="btn">
					<button type="submit" class="btn btn-dark" style="background-color: #cb202d; border:none"
						id="regForm">Reset
						Password</button>
				</div>
			</form>
		</div>
	</div>
</div>