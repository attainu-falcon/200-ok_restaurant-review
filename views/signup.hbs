<div class="contaiiner">
    <form action="/signup" method="POST">
        <h2 class="ml-3">Registration For Customers</h2>
        <div class="form-group">
            <label for="name" class="col-sm-3 control-label"></label>
            <div class="col-sm-5">
                <input type="text" id="name" placeholder="Full Name" class="form-control" name="fullname"
                    style="height: 45px" required>
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-sm-3 control-label"></label>
            <div class="col-sm-5">
                <input type="username" id="username" placeholder="username" class="form-control" style="height: 45px"
                    name="username" required>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-3 control-label"></label>
            <div class="col-sm-5">
                <input type="password" id="password" placeholder="Password" name="password" style="height: 45px"
                    class="form-control" required>
            </div>
        </div>
        <div class="form-group">
            <label for="securityquestion" class="col-sm-6 control-label"></label>
            <div class="col-sm-5">
                <input type="text" id="securityquestion" placeholder="What is your pet name?" name="securityques"
                    required class="form-control" style="height: 45px">
            </div>
        </div>
        <div class="btn">
            <button type="submit" class="btn btn-dark" style="background-color: #cb202d; border:none" id="regForm">Sign
                Up</button>
        </div>
        <p class="lead mt-4">Have An Account? <a href="/" style="color: #cb202d">Login</a></p>
    </form>
</div>