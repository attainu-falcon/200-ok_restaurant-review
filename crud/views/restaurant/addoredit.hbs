<h3>{{viewTitle}}</h3>

<form action="/restaurant" method="POST" autocomplete="off" enctype="multipart/form-data">
    <input type="hidden" name="_id" value="{{resaturant._id}}">
    <div class="form-group">
        <label>ownerName</label>
        <input type="text" class="form-control" name="ownerName" placeholder="Full Name" value="{{restaurant.ownerName}}">
        
    </div>
    <div class="form-group">
        <label>restaurant-Name</label>
        <input type="text" class="form-control" name="restaurantName" placeholder="Email" value="{{restaurant.restaurantName}}">
        
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>restaurant-Slogan</label>
            <input type="text" class="form-control" name="restaurantSlogan" placeholder="Mobile" value="{{restaurant.restaurantSlogan}}">
        </div>
        <div class="form-group col-md-6">
            <label>Description</label>
            <input type="text" class="form-control" name="description" placeholder="City" value="{{restaurant.description}}">
        </div>
    </div>
     <div class ="form-group">
    <label>imageUpload</label>
      <input type="file" name="myImage"/>
  </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/restaurant/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>